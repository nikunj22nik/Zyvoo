<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ZYVO" parent="Base.Theme.ZYVO">
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item> <!-- Set width to 90% -->
        <item name="android:paddingLeft">16dp</item>        <!-- Add padding -->
        <item name="android:paddingRight">16dp</item>       <!-- Add padding -->
        <item name="android:background">@drawable/bg_four_side_grey_corner</item> <!-- Optional -->
    </style>
</resources>