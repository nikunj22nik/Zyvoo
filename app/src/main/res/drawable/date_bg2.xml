<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set a transparent or desired background color -->
    <solid android:color="@android:color/transparent" />

    <!-- Define the stroke for the border -->
    <stroke
        android:width="1dp"
        android:color="#E5E5E5" /> <!-- Replace with your preferred color -->

    <!-- Set corner radius for rounded borders if needed -->
    <corners android:radius="@dimen/_3sdp" />
</shape>
