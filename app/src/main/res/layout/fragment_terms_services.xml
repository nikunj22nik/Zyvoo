            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/imageBackButton"
                    android:layout_width="@dimen/_27sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/ic_back_icon" />




            </RelativeLayout>

            <View
                android:id="@+id/viewHead"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:background="#C4C4C4C4"
                android:layout_marginBottom="@dimen/_10ssp"
                app:layout_constraintTop_toBottomOf="@+id/textLastUpdated" />



            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:fontFamily="@font/poppins_medium"
                android:textSize="20sp"
                android:text="Terms And Condition"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/llHeader" />
            <TextView
                android:id="@+id/textLastUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"
                android:text=""
                android:textColor="#807B7B" />


            <View
                android:id="@+id/viewHead1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginHorizontal="@dimen/_10ssp"
                android:background="#C4C4C4C4"
                android:layout_marginBottom="@dimen/_10ssp"
                app:layout_constraintTop_toBottomOf="@+id/textLastUpdate" />


            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10ssp"
                android:textSize="@dimen/_12ssp"
                android:textColor="#4E4E4E"
                android:paddingBottom="@dimen/_10sdp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_65sdp"
