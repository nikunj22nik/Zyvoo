<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_12sdp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_img_cross_big"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center_horizontal"
            />

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_success_icon_new"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your report has been submitted. Thank\n you for helping us maintain a safe\n and respectful community."
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppins"
            android:textColor="#636363"
            android:textSize="12sp"
            />

        <RelativeLayout
            android:id="@+id/rl_okay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_27ssp"
            android:layout_marginEnd="@dimen/_27ssp"
            android:background="@drawable/bg_green_add_card">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Okay"
                android:textSize="15sp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:paddingHorizontal="@dimen/_10sdp" />
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>