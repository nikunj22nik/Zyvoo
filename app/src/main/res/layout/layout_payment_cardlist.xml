<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginHorizontal="@dimen/_20ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_visa_image"
        android:drawablePadding="@dimen/_5sdp"
        android:text="....365890"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textPreferred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textCardNumber"
        app:layout_constraintBottom_toBottomOf="@id/textCardNumber"/>





</androidx.constraintlayout.widget.ConstraintLayout>