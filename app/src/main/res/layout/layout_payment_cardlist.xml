<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginStart="@dimen/_20ssp"
    android:layout_marginEnd="@dimen/_5ssp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/textCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/_5sdp"
        android:text="...."
        android:gravity="center"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableStartCompat="@drawable/ic_visa_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:id="@+id/textPreferred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferred"
        android:textSize="16sp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/rlThreeDot"
        app:layout_constraintTop_toTopOf="@id/textCardNumber"
        app:layout_constraintBottom_toBottomOf="@id/textCardNumber"/>

    <RelativeLayout
        android:id="@+id/rlThreeDot"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textCardNumber"
        app:layout_constraintBottom_toBottomOf="@id/textCardNumber"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_three_black_dots"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>