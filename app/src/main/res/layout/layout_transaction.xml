<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/rlMain"
    android:padding="8dp"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/tvAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingVertical="@dimen/_3ssp"
        android:fontFamily="@font/inter"
        android:minWidth="@dimen/_50sdp"
        android:layout_alignParentStart="true"
        android:layout_gravity="top"
        android:textColor="#000"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal" />


    <RelativeLayout
        android:id="@+id/rlStatus"
        android:layout_width="@dimen/_75sdp"
        android:layout_toEndOf="@id/tvAmount"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_gravity="top"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:paddingVertical="@dimen/_3ssp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textColor="#000"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal" />
    </RelativeLayout>



<RelativeLayout
    android:id="@+id/rlProfileName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/rlStatus"
    android:minWidth="@dimen/_140sdp">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="@dimen/_21sdp"
        android:layout_height="@dimen/_21sdp"
        android:layout_gravity="top"
        android:src="@drawable/ic_mia_pic"
        android:contentDescription="Guest Avatar"
        android:layout_marginEnd="8dp" />



    <TextView
        android:id="@+id/tvGuestName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingVertical="@dimen/_3ssp"
        android:maxLines="1"
        android:fontFamily="@font/inter"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="@dimen/_100sdp"
        android:minWidth="@dimen/_100sdp"
        android:layout_toEndOf="@+id/profileImage"
        android:textSize="@dimen/_10ssp"
        android:textStyle="normal" />
</RelativeLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingVertical="@dimen/_3ssp"
            android:minWidth="@dimen/_140sdp"
            android:fontFamily="@font/inter"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/rlProfileName"
            android:textSize="@dimen/_10ssp"
            android:textColor="#000" />

    </RelativeLayout>


