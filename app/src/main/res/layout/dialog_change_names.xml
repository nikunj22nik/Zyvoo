<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_240sdp"

    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfilePicture"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        android:background="@drawable/profle_picture_ring"
        android:padding="@dimen/_15sdp"

        android:src="@drawable/ic_img_not_found"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageEditPicture"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_margin="@dimen/_50sdp"
        android:src="@drawable/ic_checked_icon"
        app:layout_constraintStart_toStartOf="@id/imageProfilePicture"
        app:layout_constraintTop_toTopOf="@id/imageProfilePicture" />

    <EditText
    android:id="@+id/editTextFirstName"
    android:layout_width="@dimen/_110sdp"
    android:layout_height="wrap_content"
    android:maxLines="1"
    android:hint="First name*"
    android:paddingVertical="@dimen/_5ssp"
    android:textColor="@color/black"
    android:textColorHint="@color/black"
    android:fontFamily="@font/poppins"
    android:textSize="@dimen/_10ssp"
    android:paddingStart="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_7sdp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/imageProfilePicture"
    android:background="@drawable/edit_name_bg"
    />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="Last name*"
        android:paddingVertical="@dimen/_5ssp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10ssp"
        android:textAlignment="viewStart"
        android:paddingStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageProfilePicture"
        android:background="@drawable/edit_name_bg"

        />

    <TextView
        android:id="@+id/textSaveChangesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/edit_name_bg"
        android:fontFamily="@font/poppins"
        android:paddingHorizontal="@dimen/_55sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:text="Save Changes"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        android:backgroundTint="#3A4B4C"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>