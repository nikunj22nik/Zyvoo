<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragment.guest.feedback.FeedbackFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imageBackIcon"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_back_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_toEndOf="@+id/imageBackIcon"
                    android:fontFamily="@font/poppins"
                    android:text="Share Feedback"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="#E5E5E5" />


            <TextView
                android:id="@+id/tvIntroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10ssp"
                android:fontFamily="@font/poppins"
                android:letterSpacing=".01"
                android:visibility="gone"
                android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text_ever_since_the_1500s_when_an_unknown_printer_took_a_galley_of_type_and_scrambled_it_to_make_a_type_specimen_book_it_has_survived_not_only_five_centuries_but_also_the_leap_into_electronic_typesetting_remaining_essentially_unchanged"
                android:textColor="@color/_000000"
                android:textSize="13sp" />

            <WebView
                android:id="@+id/webViewIntroText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:overScrollMode="never"
                android:isScrollContainer="false"
                tools:ignore="WebViewLayout" />

            <!-- Feedback Topic Dropdown -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins"
                android:text="What's your feedback about?"
                android:textColor="@color/_000000"
                android:textSize="13sp" />


            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinnerFeedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/text_bg_spinner"
                android:foreground="?attr/selectableItemBackground"
                android:hint="Please select"
                android:padding="@dimen/_10sdp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_padding="@dimen/_7sdp"
                app:spinner_arrow_tint="@color/black"
                app:spinner_divider_color="@color/black"
                app:spinner_divider_show="false"
                app:spinner_divider_size="@dimen/_2sdp"
                app:spinner_popup_animation="normal"
                app:spinner_popup_background="@color/white"
                app:spinner_popup_elevation="@dimen/_10sdp" />


            <TextView
                android:id="@+id/textAddDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins"
                android:text="Add Details"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:visibility="gone" />

            <!-- Add Details EditText -->
            <EditText
                android:id="@+id/etAddDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/bg_four_side_grey_corner_white_feedback"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:minHeight="@dimen/_105sdp"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/_000000"
                android:textSize="13sp"
                android:visibility="gone" />

            <!-- Contact Us Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/need_to_get_in_touch"
                android:textColor="@color/_000000"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins"
                android:text="@string/we_ll_start_with_some_questions_and_get_nyou_to_the_right_place"
                android:textColor="@color/_000000"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/btnContactUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_12ssp"
                android:background="@drawable/text_bg1"
                android:paddingHorizontal="@dimen/_21sdp"
                android:text="@string/contact_us"
                android:textSize="14sp"
                android:paddingVertical="@dimen/_8sdp"
                android:elevation="@dimen/_15ssp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/_000000"
                app:buttonTint="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:background="#E5E5E5" />

            <!-- Submit Button -->
            <TextView
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_85sdp"
                android:background="@drawable/button_bg_feedback"
                android:backgroundTint="#4AEAB1"
                android:textSize="14sp"
                android:paddingVertical="@dimen/_7sdp"
                android:paddingHorizontal="@dimen/_32sdp"
                android:fontFamily="@font/poppins"
                android:text="Submit"
                android:textColor="@color/_000000" />

        </LinearLayout>


    </ScrollView>

</layout>