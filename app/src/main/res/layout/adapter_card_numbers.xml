<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="22dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_card_view_adapter"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.65"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
            android:textSize="10sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textCardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** **** **78"
            android:textSize="10sp"
            android:fontFamily="@font/poppins"
            android:textColor="#AEAEAE"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlThreeDot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_three_black_dots"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_preferred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_two_side_corners_green"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            />

    </RelativeLayout>
</LinearLayout>