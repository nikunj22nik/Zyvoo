<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageCross"
        android:layout_width="@dimen/_16sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_cross" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins"
        android:text="Report Violation"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:background="#C4C4C4"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:background="@drawable/bg_four_side_grey_corner_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textPleaseSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins"
            android:text="Please select a reason for reporting this user."
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp" />

        <com.skydoves.powerspinner.PowerSpinnerView
            android:id="@+id/spinnerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_grey_line_bg"
            android:foreground="?attr/selectableItemBackground"
            android:hint="What is your favourite color?"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#80000000"
            android:textSize="14.5sp"
            app:spinner_arrow_gravity="end"
            app:spinner_arrow_padding="8dp"
            app:spinner_arrow_show="true"
            app:spinner_arrow_tint="#3A4B4C"
            app:spinner_divider_show="false"
            app:spinner_item_height="46dp"
            app:spinner_popup_animation="fade"
            app:spinner_popup_background="@color/white"
            app:spinner_popup_elevation="14dp" />


        <TextView
            android:id="@+id/textAddAdditional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/poppins"
            android:text="Add Additional Details"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"

            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/bg_four_side_grey_corner_white"
            android:fontFamily="@font/poppins"
            android:gravity="start"
            android:text=""
            android:hint="You can also add additional details to help us investigate further. "
            android:padding="@dimen/_5sdp"
            android:textColorHint="#444444"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textSubmitReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Report"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_bg"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_30sdp"
        android:paddingVertical="@dimen/_8sdp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_15sdp"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@+id/rlPassword"/>

</LinearLayout>