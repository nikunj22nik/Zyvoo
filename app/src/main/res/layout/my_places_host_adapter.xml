<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_adap"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius_image">

            <!-- ViewPager2 for swiping content -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- TabLayout for tab indicators -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutForIndicator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@color/trans"
                android:gravity="center"
                android:orientation="horizontal"
                app:tabBackground="@drawable/tab_pager_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabPaddingStart="@dimen/_8sdp"
                app:tabPaddingEnd="@dimen/_8sdp"
                app:layout_constraintBottom_toTopOf="@id/rl_btm_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Bottom view containing profile and extra details -->
            <RelativeLayout
                android:id="@+id/rl_btm_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:background="@drawable/bg_four_side_corner_white"
                android:paddingVertical="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_img_girl_dumm"
                    android:layout_marginStart="@dimen/_10sdp" />

                <!-- Name and Location Text Views -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img1"
                    android:layout_marginStart="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hosted by Mia"
                        android:textSize="12.44sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Melbourne Beach, FL, US"
                        android:textColor="@color/black"
                        android:textSize="12.44sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Reward Image, initially hidden -->
            <ImageView
                android:id="@+id/imageReward"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_reward"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_8sdp" />

            <!-- Instant Book Button -->
            <TextView
                android:id="@+id/textInstantBook"
                android:layout_width="@dimen/_93sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/flash_bg"
                android:drawablePadding="@dimen/_4sdp"
                android:fontFamily="@font/poppins"
                android:paddingHorizontal="@dimen/_5sdp"
                android:paddingVertical="@dimen/_4sdp"
                android:text="Instant book"
                android:textColor="@color/black"
                android:textSize="12.21sp"
                android:textStyle="normal"
                app:drawableStartCompat="@drawable/ic_caminho_flash"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Add to Wish List Icon -->
            <ImageView
                android:id="@+id/imageAddWish"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_icon_filter_host"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hotel name and additional details below the CardView -->
    <TextView
        android:id="@+id/textHotelName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cabin in Peshastin"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@id/layoutPricePerHour"
        app:layout_constraintTop_toBottomOf="@id/cl1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textSize="13sp" />

    <!-- Star Image and Rating -->
    <ImageView
        android:id="@+id/imageStar"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:src="@drawable/ic_star"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_7sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textHotelName" />

    <TextView
        android:id="@+id/textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="11sp"
        android:fontFamily="@font/poppins"
        android:textColor="#FCA800"
        android:layout_marginStart="@dimen/_2sdp"
        app:layout_constraintStart_toEndOf="@id/imageStar"
        app:layout_constraintTop_toBottomOf="@id/textHotelName" />

    <!-- Total Reviews Count -->
    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1k+)"
        android:textStyle="bold"
        android:textColor="#A4A4A4"
        android:textSize="@dimen/_11ssp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/textRating"
        app:layout_constraintTop_toBottomOf="@id/textHotelName" />

    <!-- Hotel Distance from user -->
    <TextView
        android:id="@+id/textMiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="37 miles away"
        android:textColor="#A4A4A4"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="11sp"
        android:fontFamily="@font/poppins"
        android:drawablePadding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        app:drawableStartCompat="@drawable/ic_location_hotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textHotelName" />


    <LinearLayout
        android:id="@+id/layoutPricePerHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl1">

        <!-- Clock Icon -->
        <ImageView
            android:id="@+id/imgClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clock2"
            android:layout_marginEnd="@dimen/_4sdp"
            />

        <!-- Price Text -->
        <TextView
            android:id="@+id/textPricePerHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price per hour"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_marginTop="0.5dp"
            android:fontFamily="@font/poppins"
            android:layout_marginEnd="@dimen/_4sdp"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>